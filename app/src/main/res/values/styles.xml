<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_400</item>
        <item name="colorPrimaryDark">@color/green_600</item>
        <item name="colorAccent">@color/purple_800</item>
    </style>

    <style name="EditText.Green" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/green_500</item>
        <item name="colorControlHighlight">@color/green_500</item>
        <item name="colorControlNormal">@color/green_400</item>
    </style>

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="android:textColorPrimary">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_60</item>
    </style>

    <style name="Button.Blue.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/blue_400</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleColor">#80ffffff</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleOverlay">true</item>
    </style>

    <style name="RippleStyleBlack" parent="@style/RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989a</item>
    </style>
</resources>
