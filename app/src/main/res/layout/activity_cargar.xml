<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/green_400"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/green_400"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStartWithNavigation="0.0dip"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_content"
        android:background="@color/green_400"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:background="@color/green_400"
            android:paddingTop="@dimen/spacing_large"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_smlarge"
                android:layout_marginRight="@dimen/spacing_smlarge">

                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xsmall"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        style="@style/RippleStyleBlack">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:padding="@dimen/spacing_large"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="Agregar">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                app:srcCompat="@drawable/ic_produccion_leche" />

                            <TextView
                                android:layout_gravity="center"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@color/grey_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:minLines="2"
                                android:maxLines="2"
                                android:text="Producción de Leche" />
                        </LinearLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>



                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="0.0dip" />

                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xsmall"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        style="@style/RippleStyleBlack">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:padding="@dimen/spacing_large"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="Agregar">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                app:srcCompat="@drawable/ic_produccion_carne" />

                            <TextView
                                android:layout_gravity="center"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@color/grey_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:minLines="2"
                                android:maxLines="2"
                                android:text="Producción de Carne" />
                        </LinearLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_smlarge"
                android:layout_marginRight="@dimen/spacing_smlarge">

                <androidx.cardview.widget.CardView

                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xsmall"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        style="@style/RippleStyleBlack">

                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_large"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="Ver">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_registro_masivo" />

                            <TextView
                                android:layout_gravity="center"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@color/grey_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:minLines="1"
                                android:maxLines="2"
                                android:text="Registro Masivo" />
                        </LinearLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>



                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="0.0dip" />

                <androidx.cardview.widget.CardView

                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xsmall"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        style="@style/RippleStyleBlack">

                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_large"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="Ver">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_mastitis_masivo" />

                            <TextView
                                android:layout_gravity="center"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@color/grey_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:minLines="1"
                                android:maxLines="2"
                                android:text="Mastitis Masivo" />
                        </LinearLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>



                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_smlarge"
                android:layout_marginRight="@dimen/spacing_smlarge">

                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xsmall"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        style="@style/RippleStyleBlack">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:padding="@dimen/spacing_large"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="Agregar">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                app:srcCompat="@drawable/ic_venta_leche" />

                            <TextView
                                android:layout_gravity="center"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@color/grey_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:minLines="1"
                                android:maxLines="2"
                                android:text="Venta de Leche" />
                        </LinearLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>



                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="0.0dip" />

                <androidx.cardview.widget.CardView

                    android:visibility="visible"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xsmall"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip"
                    app:cardUseCompatPadding="true">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        style="@style/RippleStyleBlack">

                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_large"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:onClick="Ver">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_venta_ganado" />

                            <TextView
                                android:layout_gravity="center"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                                android:textColor="@color/grey_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:minLines="1"
                                android:maxLines="2"
                                android:text="Venta de Ganado" />
                        </LinearLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>



                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>